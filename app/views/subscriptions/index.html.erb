<head>
  <style>
    * {
      font-family: Arial;
    }
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 80%;
    }
    
    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 5px;
    }
    
    input[type="text"] {
      font-size: 15px;
      width:50%;
      border: none;
      text-align: center;
    }
    
    input[type="button"] {
      text-align: center;
    }
  </style>
</head>

<body>
    <div align="center">
        <%= form_with url: "/subscriptions", method: 'post'  do |f|  %>
            <p>
                <%= f.label :email %><br/>
                <%= f.text_field :email %>
            </p>
            <p>
                <%= f.label :class %><br/>
                <%= f.text_field :class %>
            </p>
            <p>
                <%= f.label :shift %><br/>
                <%= f.text_field :shift %>
            </p>
            <%= f.submit "Subscribe" %>
        <% end %>
    </div>
</body>
