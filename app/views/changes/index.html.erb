<head>
    <%= stylesheet_link_tag "common" %>
</head>

<body>
    <ul class="MenuList">
        <li class="MenuListItem"><a href="/">Pocetna</a></li>
        <li class="MenuListItem"><a class="active" href="/changes">Izmjene</a></li>
        <li class="MenuListItem"><a href="/subscriptions">Pretplata</a></li>
        <li class="MenuListItem"><a href="/settings">Postavke</a></li>
    </ul>
    <div align="center">
        <%= form_with url: "/changes", method: 'post'  do |f|  %>
            <p>
                <%= f.label :datum %><br/>
                <%= f.date_field :date, value: Date.current + 1.day %>
            </p>
            <p>
                <%= f.label :shift %><br/>
                <%= f.radio_button :shift, 'A', checked: true %>A<br/>
                <%= f.radio_button :shift, 'B' %>B<br/>
            </p>
            <%= f.submit "Find" %>
        <% end %>
    </div>
</body>