        x = "<tr><td><input multiple=\"multiple\" type=\"text\" name=\"change[data2][]\" id=\"change_data2\"></td><td><input multiple=\"multiple\" type=\"text\" name=\"change[data2][]\" id=\"change_data2\"></td><td><input multiple=\"multiple\" type=\"text\" name=\"change[data2][]\" id=\"change_data2\"></td><td><input multiple=\"multiple\" type=\"text\" name=\"change[data2][]\" id=\"change_data2\"></td><td><input type=\"button\" value=\"-\" onclick=\"$(this).closest('tr').remove()\"></td></tr>"
    </script>
