<head>
  <style>
    * {
      font-family: Arial;
    }
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 80%;
    }
    
    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 5px;
    }
    
    input[type="text"] {
      font-size: 15px;
      width:50%;
      border: none;
      text-align: center;
    }
    
    input[type="button"] {
      text-align: center;
    }
  </style>
</head>

<body>
    <%= button_to "Back", changes_path, method: :get %>
    <div align="center">
        <h1>Uredi izmjene za <%= @change.date.strftime('%d/%m/%Y') %></h1>
        <%= form_for(@change) do |f| %>
            <table>
                <tr>
                    <th></th>
                    <% for i in 0..8 %>
                        <th>
                            <%= f.time_field :starttime, multiple: true, value: Time.parse(@starttime[i]).strftime("%R") %>
                            <%= f.time_field :endtime, multiple: true, value: Time.parse(@endtime[i]).strftime("%R") %>
                        </th>
                    <% end %>
                </tr>
                <tr>
                    <th>Razredi</th>
                    <% @header.each do |x| %>
                        <th><%= x %></th>
                    <% end %>
                </tr>
                <% counter = 0 %>
                <% @classes.each do |x| %>
                    <tr>
                        <th><%= x %></th>
                        <% for i in 0..8 %>
                            <td>
                                <%= f.text_field :data, multiple: true, value: @data[counter * 9 + i].to_s %>
                            </td>
                        <% end %>
                    </tr>
                    <% counter+= 1 %>
                <% end %>
            </table>

            <br/>

            <table id="table_data2">
                <tr>
                    <th>Sat</th>
                    <th>Razred</th>
                    <th>Predmet</th>
                    <th>Ucionica</th>
                    <th><input type="button" value="+" onclick="$('#table_data2 tr:last').after(x);" /></th>
                </tr>
                <% for i in 0...(@data2.count / 4) %>
                    <tr>
                        <td><%= f.text_field :data2, multiple: true, value: @data2[i * 4 + 0] %></td>
                        <td><%= f.text_field :data2, multiple: true, value: @data2[i * 4 + 1] %></td>
                        <td><%= f.text_field :data2, multiple: true, value: @data2[i * 4 + 2] %></td>
                        <td><%= f.text_field :data2, multiple: true, value: @data2[i * 4 + 3] %></td>
                        <td><input type="button" value="-" onclick="$(this).closest('tr').remove()" /></td>
                    </tr>
                <% end %>
            </table>

            <%= f.submit "Save changes" %>
        <% end %>
    </div>
</body>
