<head>
    <%= stylesheet_link_tag "settings" %>
    <%= stylesheet_link_tag "common" %>
</head>

<body>
    <ul class="MenuList">
        <li class="MenuListItem"><a href="/">Pocetna</a></li>
        <li class="MenuListItem"><a href="/changes">Izmjene za ucenike</a></li>
        <li class="MenuListItem"><a href="/professors">Izmjene za profesore</a></li>
        <li class="MenuListItem"><a href="/subscriptions">Pretplata</a></li>
        <li class="MenuListItem"><a class="active" href="/settings">Postavke</a></li>
    </ul>
    <div align="center">
        <%= form_with url: "/settings", method: 'post'  do |f|  %>
            <p>
                <%= f.label :classes_a, 'A smjena razredi' %><br/>
                <%= f.text_field :classes_a, value: @classes_a %>
            </p>
            <p>
                <%= f.label :classes_b, 'B smjena razredi' %><br/>
                <%= f.text_field :classes_b, value: @classes_b %>
            </p>
            <p>
                <%= f.label :shift_bit, 'A smjena ujutro' %><br/>
                <%= f.radio_button :shift_bit, 0, checked: !@shift_bit.positive? %>Parnim tjednom<br/>
                <%= f.radio_button :shift_bit, 1, checked: @shift_bit.positive? %>Neparnim tjednom<br/>
            </p>
            <%= f.submit "Save" %>
        <% end %>
    </div>
</body>
